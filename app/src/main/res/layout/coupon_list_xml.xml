<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="true"
    android:layout_marginTop="3dp"
    android:background="@color/Background_color">

    <LinearLayout
        android:id="@+id/LnrL__"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Txt_program"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/rlv_container"
        android:orientation="horizontal"
        android:visibility="visible">

        <Space
            android:id="@+id/spc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/Img_phone_cart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/mobile_on" />

        <Space
            android:id="@+id/spc2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/instore"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="Reset"
            app:srcCompat="@drawable/instore_on" />

        <Space
            android:id="@+id/spc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/phone_on"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="cancel"
            app:srcCompat="@drawable/phone_on" />

        <Space
            android:id="@+id/spc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/print_"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="cancel"
            app:srcCompat="@drawable/print_on" />

        <Space
            android:id="@+id/spc5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_retailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Txt_program"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/rlv_container"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="@color/new_blue_color"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/glossy_"
        android:text="Save"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/Txt_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/rlv_container"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="@color/new_blue_color"

        android:textSize="16dp" />

    <RelativeLayout
        android:id="@+id/rlv_container"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Txt_expiry_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Txt_expiry_date"
            android:textColor="@color/new_blue_color"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/coupon" />
    </RelativeLayout>
</RelativeLayout>
